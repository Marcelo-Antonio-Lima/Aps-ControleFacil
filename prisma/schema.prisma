generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Coluna ID, chave prim√°ria
  id    String  @id
  email String  @unique
  name  String?
  saldoId Int @unique
  saldo Saldo @relation(fields: [saldoId],references: [id])
}

model Saldo{
  id Int @id @default(autoincrement())
  valorMensal Decimal
  valorAtual Decimal?
  user User?


}

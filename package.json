{
  "name": "ControleFacil",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "db:create": "npx ts-node --esm ./src/app/create-database.ts",

    "@types/pg": "^8.15.5",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2"
  }
}
